{{!-- Generates Dashboard --}}
<section>
  <h2>Create A New Post</h2>

{{!-- New Post ! --}}
  <form class="newpost-form">
      {{!-- Input Title --}}
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" class="post-title-input"/>
    </div>

    {{!-- Input your Content --}}
    <div>
      <label for="post-contents">Content</label>
      <input type="text" id="post-contents" name="post-contents" class="postcontents-input"/>
    </div>

    {{!-- Submit BTN --}}
    <button type="submit" class="btn">Create</button>

  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit this post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

